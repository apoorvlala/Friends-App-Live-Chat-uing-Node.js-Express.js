
<article class="friendslist <% if (pageId=='home'){ %> jumbotron hidden-xs <% } %>">
  <div class="container">
    <div class="row">
        <% friends.forEach(function(item) { %>
        <div class="<% if(pageId=='home'){%> col-sm-4 tex-center <% } else{ %> col-sm-8 <% } %>">
          <h3 class="friendslist-title"><%= item.title %></h3>
          <h5 class="friendslist-name"> <a href="/friends/show/<%= item.shortname %>"><%= item.name %></a></h5>
          <p class="friendslist-info"><a href="/friends/show/<%= item.shortname %>">
            <% if(pageId=='home'){ %>
              <img style="width: 150px;" class="friendslist-img img-circle" src="/images/friends/<%= item.shortname %>.jpg" alt="Photo of <%= item.name %>">
            <% } %>
            <% if(pageId=='friend'){ %>
              <img style="width: 150px;" class="friendslist-img img-circle pull-left" src="/images/friends/<%= item.shortname %>.jpg" alt="Photo of <%= item.name %>">
            <% } %>
             
            </a>
            <% if(pageId=='friendDetail'){ %>
              <img style="width: 150px;" class="friendslist-img img-responsive pull-left" src="/images/friends/<%= item.shortname %>.jpg" alt="Photo of <%= item.name %>">
            <% } %>
          </a>
            <% if(pageId=='home'){ %>
            <%= item.summary %>
            <% } %>
          </p>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>
